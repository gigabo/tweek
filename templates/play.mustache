<div id="play">
  <h1 id="title">{{title}}</h1>
  <div id="play_container" class="container">
    <div id="canvas_container" class="canvas_container">
      <canvas id="play_canvas" width=1000 height=500>
        This toy uses a canvas element,
        which doesn't seem to be supported by your browser.
      </canvas>
    </div>
    <div id="debug"></div>
  </div>
  {{#about}}
  <div id="about" class="container">
    <article>
      <header id="about_header">
        <h1>{{title}}</h1>
        <h2>{{subtitle}}</h2>
        <time datetime={{date}} pubdate>{{date}}</time>
        <div id="about_tools">
          <h3>Tools used:</h3>
          <ul>
          {{#tools}} <li><a href="{{url}}">{{name}}</a></li> {{/tools}}
          </ul>
        </div>
      </header>
      <div id="about_description">
        {{#description}}
          <p>
            {{{p}}}
          </p>
        {{/description}}
      </div>
      <div id="about_footer">
      &copy; 2010 {{author}}
      </div>
    </article>
  </div>
  {{/about}}
</div>
